# Database
DATABASE_URL=postgresql://user:secret123@localhost:5433/vistalock_local

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Server
PORT=3001

# File Storage
# Directory where uploaded files will be stored
UPLOAD_DIR=./uploads

# Base URL for accessing uploaded files (should match your domain in production)
STORAGE_BASE_URL=http://localhost:3001/uploads

# For S3-compatible storage (future enhancement):
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=vistalock-uploads

# Twilio SMS Configuration
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Dashboard URL (for activation links)
DASHBOARD_URL=http://localhost:3005
