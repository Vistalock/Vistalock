{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "BLOB_READ_WRITE_TOKEN",
    "NEXT_PUBLIC_API_URL",
    "DATABASE_URL",
    "JWT_SECRET"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "lint": {},
    "test": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}